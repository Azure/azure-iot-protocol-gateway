<?xml version="1.0" encoding="utf-8"?>
<ApplicationManifest xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" ApplicationTypeName="ProtocolGateway.Host.FabricType" ApplicationTypeVersion="1.0.0" xmlns="http://schemas.microsoft.com/2011/01/fabric">
  <Parameters>
    <Parameter Name="BackEnd_MinReplicaSetSize" DefaultValue="3" />
    <Parameter Name="BackEnd_PartitionCount" DefaultValue="16" />
    <Parameter Name="BackEnd_TargetReplicaSetSize" DefaultValue="3" />
    <Parameter Name="FrontEnd_InstanceCount" DefaultValue="-1" />
  </Parameters>
  <!-- Import the ServiceManifest from the ServicePackage. The ServiceManifestName and ServiceManifestVersion 
       should match the Name and Version attributes of the ServiceManifest element defined in the 
       ServiceManifest.xml file. -->
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="ProtocolGateway.Host.Fabric.BackEndPkg" ServiceManifestVersion="1.0.0" />
    <ConfigOverrides />
    <Policies>
      <RunAsPolicy CodePackageRef="Code" UserRef="SfGatewayUser" />
    </Policies>
  </ServiceManifestImport>
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="ProtocolGateway.Host.Fabric.FrontEndPkg" ServiceManifestVersion="1.0.0" />
    <ConfigOverrides />
    <Policies>
      <RunAsPolicy CodePackageRef="Code" UserRef="SfSetupUser" EntryPointType="Setup" />
      <RunAsPolicy CodePackageRef="Code" UserRef="SfGatewayUser" />
    </Policies>
  </ServiceManifestImport>
  <DefaultServices>
    <!-- The section below creates instances of service types, when an instance of this 
         application type is created. You can also create one or more instances of service type using the 
         ServiceFabric PowerShell module.
         
         The attribute ServiceTypeName below must match the name defined in the imported ServiceManifest.xml file. -->
    <Service Name="BackEnd" ServicePackageActivationMode="ExclusiveProcess">
      <StatefulService ServiceTypeName="BackEndType" TargetReplicaSetSize="[BackEnd_TargetReplicaSetSize]" MinReplicaSetSize="[BackEnd_MinReplicaSetSize]">
        <!-- WARNING: Partition scheme for backend has been chosen as fixed named partitions. DO NOT change the name or number -->
        <NamedPartition>
          <Partition Name="BackEnd_0" />
          <Partition Name="BackEnd_1" />
          <Partition Name="BackEnd_2" />
          <Partition Name="BackEnd_3" />
          <Partition Name="BackEnd_4" />
          <Partition Name="BackEnd_5" />
          <Partition Name="BackEnd_6" />
          <Partition Name="BackEnd_7" />
          <Partition Name="BackEnd_8" />
          <Partition Name="BackEnd_9" />
          <Partition Name="BackEnd_10" />
          <Partition Name="BackEnd_11" />
          <Partition Name="BackEnd_12" />
          <Partition Name="BackEnd_13" />
          <Partition Name="BackEnd_14" />
          <Partition Name="BackEnd_15" />
        </NamedPartition>
      </StatefulService>
    </Service>
    <Service Name="FrontEnd">
      <StatelessService ServiceTypeName="FrontEndType" InstanceCount="[FrontEnd_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
  </DefaultServices>
  <Principals>
    <Users>
      <User Name="SfSetupUser">
        <MemberOf>
          <SystemGroup Name="Administrators" />
        </MemberOf>
      </User>
      <User Name="SfGatewayUser" AccountType="NetworkService" />
    </Users>
  </Principals>
</ApplicationManifest>